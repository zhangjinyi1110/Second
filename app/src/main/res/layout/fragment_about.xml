<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zjy.second.fragment.AboutFragment">

    <ImageView
        android:src="@drawable/logo"
        android:id="@+id/about_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Second"
        android:layout_below="@id/about_logo"
        android:layout_marginTop="28.5dp"
        android:layout_centerHorizontal="true"
        android:textSize="24sp"
        android:textColor="#666666"/>

    <TextView
        android:id="@+id/about_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="2017.11.29"
        android:layout_marginBottom="17.5dp"
        android:textColor="#999999"
        android:textSize="9sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/about_team"
        android:text="该应用最终解释权归应用开发团队所有"
        android:layout_marginBottom="10dp"
        android:textColor="#999999"
        android:textSize="10sp"/>

</RelativeLayout>
