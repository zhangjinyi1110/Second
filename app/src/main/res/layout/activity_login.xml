<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0555ff"
    tools:context="com.example.zjy.second.RegisterActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo"/>

    <TextView
        android:id="@+id/login_text"
        android:layout_below="@id/logo"
        android:text="登陆"
        android:textColor="#ffffff"
        android:textSize="45sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/login_name_layout"
        android:layout_margin="30dp"
        android:layout_below="@id/login_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="用 户："
            android:textSize="21sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"/>

            <LinearLayout
                android:background="@drawable/edittext_bg"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_pwd_layout"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/login_name_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="密 码："
            android:textSize="21sp"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/login_pwd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:inputType="textPassword"/>

            <LinearLayout
                android:background="@drawable/edittext_bg"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_margin="30dp"
        android:layout_below="@id/login_pwd_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:id="@+id/login_forgot"
            android:text="忘了密码?"
            android:textSize="18sp"
            android:textColor="#50ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/login_jump_over"
        android:text="暂不登录"
        android:textSize="18sp"
        android:textColor="#50ffffff"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_register"
        android:text="注 册"
        android:textSize="23sp"
        android:textColor="#ffffff"
        android:layout_above="@id/login_jump_over"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/jump_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/login_ok"
        android:text="登 录"
        android:textSize="23sp"
        android:textColor="#ffffff"
        android:layout_above="@id/login_register"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>
