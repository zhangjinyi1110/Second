<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/publish_goods_image"
                android:layout_width="match_parent"
                android:layout_height="165dp"
                android:layout_gravity="center_horizontal"
                android:src="@mipmap/ic_launcher"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publish_goods_name"
                android:textSize="15sp"
                android:text="手镯"
                android:maxLines="2"
                android:minLines="2"
                android:textColor="#333333"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="9dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/publish_goods_context"
                android:textSize="11sp"
                android:text="出售一个精品手镯，看中的请 加我微信"
                android:textColor="#999999"
                android:minLines="2"
                android:maxLines="2"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="9dp"/>

        </LinearLayout>

        <RelativeLayout
            android:id="@+id/publish_remove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#30000000"
            android:visibility="gone">

            <Button
                android:id="@+id/publish_remove_btn"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="移 除"
                android:textSize="18sp"
                android:textColor="#ffffff"
                android:background="@drawable/remove_btn_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </FrameLayout>

</android.support.v7.widget.CardView>